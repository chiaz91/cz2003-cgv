#VRML V2.0 utf8
#polygon mesh example: a pyramid

Background {skyColor 0.2 0.2 0.2}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 0 0   #red=1, green=0, blue=0
			specularColor    1 1 1	 #red=1, green=1, blue=1
			transparency 0   # try values between 0 and 1
			shininess 1      # shiny surface, try values between 0 and 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
			point [
				# bottom vertices
				0.0  0.0  0.0,	#vertex 0
				1.0  0.0  0.0,	#vertex 1
				1.0  0.0  1.0,	#vertex 2
				0.0  0.0  1.0,	#vertex 3
				# top vertex
				0.0  1.0  0.0,	#vertex 4
				1.0  1.0  0.0,	#vertex 5
				1.0  1.0  1.0,	#vertex 6
				0.0  1.0  1.0,	#vertex 7
			]
        }
		coordIndex [
			0,1,2,3,-1, # bottom square
			7,6,5,4,-1  # top square
			# side 1
			0,7,1,-1  # top
			4,1,7,-1  # bottom
			# side 2
			1,4,2,-1  # top
			5,2,4,-1  # bottom
			# side 3
			2,5,3,-1  # top
			6,3,5,-1  # bottom
			# side 4
			3,6,0,-1  # top
			7,0,6,-1  # bottom
		]
			
	}
}
